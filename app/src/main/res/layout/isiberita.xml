<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teksbok">
    <LinearLayout
        android:id="@+id/listb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@color/darkblue"
            />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@color/middleblue">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Berita"
                android:textAlignment="textStart"
                android:textColor="@color/putih"
                android:textSize="20dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/judul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="ini judul"
            android:textAlignment="center"
            android:textColor="@color/darkblue"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tanggal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:paddingRight="50dp"
            android:text="ini tanggalan"
            android:textSize="10dp"

            />
        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/jeneponto"
            />
        <TextView
            android:id="@+id/konten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/middleblue"
            android:text="ini isi konten"
            android:textAlignment="textStart"
            android:layout_gravity="center_vertical|left"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:paddingTop="20dp"
            />
        <Button
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:background="@color/middleblue"
            android:text="lihat web"
            android:textSize="20sp"
            android:textColor="@color/teksbok"
            android:id="@+id/btn_berita"
            android:visibility="invisible"
            />
    </LinearLayout>


</ScrollView>