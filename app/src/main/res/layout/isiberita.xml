<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teksbok">
    <LinearLayout
        android:id="@+id/listb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@color/redda">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Berita"
                android:textSize="30dp"
                android:textColor="@color/putih"
                android:textAlignment="center"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <TextView
            android:id="@+id/judul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="ini judul"
            android:textColor="@color/darkblue"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/tanggal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:paddingRight="50dp"
            android:text="ini tanggalan"
            android:textSize="10dp"

            />
        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/jeneponto"
            />
        <TextView
            android:id="@+id/konten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="@color/middleblue"
            android:text="ini isi konten"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:paddingTop="20dp"
            />
    </LinearLayout>


</ScrollView>