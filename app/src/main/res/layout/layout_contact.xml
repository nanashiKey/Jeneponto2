<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Rcontact"
    android:animateLayoutChanges="false"
    android:background="@color/putih"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    >
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:background="@color/putih"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/middleblue"
        android:orientation="horizontal"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:textAlignment="center"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/kontak1"
            />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Hubungi Kami"
            android:textColor="@color/teksbok"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imview2"
            android:layout_width="match_parent"
            android:layout_height="800px"
            app:srcCompat="@drawable/bckg" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20px"
        android:paddingRight="20px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20px">

            <ImageView
                android:id="@+id/imview3"
                android:layout_width="100px"
                android:layout_height="100px"
                app:srcCompat="@drawable/lokasi"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15px"
                />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:text="@string/headOffice" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="30px">

            <ImageView
                android:id="@+id/imview4"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15px"
                app:srcCompat="@drawable/webz" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:text="@string/OfficeHours" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="30px">

            <ImageView
                android:id="@+id/imview5"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_marginRight="15px"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/phone" />
         <TextView
            android:id="@+id/tv4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:paddingTop="20px"
            android:text="@string/OfficeHours2" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>

</ScrollView>